---
interface Props {
  section: {
    type: 'text';
    id: string;
    order: number;
    heading?: string | undefined;
    content: string;
  };
}

const { section } = Astro.props;
const { heading, content } = section;
---

<section class="py-16">
  <div class="container mx-auto px-4">
    {heading && (
      <h2 class="text-3xl md:text-4xl font-bold mb-8 text-gray-900">
        {heading}
      </h2>
    )}
    
    <div 
      class="prose prose-lg max-w-none"
      set:html={content}
    />
  </div>
</section>

---
interface Props {
  section: {
    type: 'cardGrid';
    id: string;
    order: number;
    heading?: string | undefined;
    cards: Array<{
      title: string;
      description: string;
      imageUrl?: string | undefined;
      link?: string | undefined;
    }>;
    columns: 2 | 3 | 4;
  };
}

const { section } = Astro.props;
const { heading, cards, columns } = section;

const gridColsClass = {
  2: 'md:grid-cols-2',
  3: 'md:grid-cols-3',
  4: 'md:grid-cols-4',
}[columns];
---

<section class="py-16 bg-background">
  <div class="container mx-auto px-4">
    {heading && (
      <h2 class="text-3xl md:text-4xl font-bold mb-12 text-center text-text">
        {heading}
      </h2>
    )}
    
    <div class={`grid grid-cols-1 ${gridColsClass} gap-8`}>
      {cards.map((card) => (
        <div class="bg-background rounded-lg shadow-lg overflow-hidden hover:shadow-xl transition-shadow border border-text/10">
          {card.imageUrl && (
            <img 
              src={card.imageUrl} 
              alt={card.title} 
              class="w-full h-48 object-cover"
            />
          )}
          <div class="p-6">
            <h3 class="text-xl font-bold mb-3 text-text">
              {card.title}
            </h3>
            <p class="text-text-secondary mb-4">
              {card.description}
            </p>
            {card.link && (
              <a 
                href={card.link} 
                class="text-primary hover:text-accent font-semibold inline-flex items-center"
              >
                Learn More â†’
              </a>
            )}
          </div>
        </div>
      ))}
    </div>
  </div>
</section>

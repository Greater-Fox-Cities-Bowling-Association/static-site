---
import type { CtaSection } from '../../../types/cms';

interface Props {
  section: CtaSection;
}

const { section } = Astro.props;
const { heading, buttonText, buttonLink, style } = section;

const buttonStyles = {
  primary: 'bg-primary hover:bg-accent text-background',
  secondary: 'bg-secondary hover:bg-primary text-text',
};
---

<section class="py-20 bg-gradient-to-br from-primary to-secondary">
  <div class="container mx-auto px-4 text-center">
    <h2 class="text-3xl md:text-5xl font-bold text-background mb-8">
      {heading}
    </h2>
    
    <a 
      href={buttonLink} 
      class={`inline-block font-semibold px-10 py-4 rounded-lg transition-colors ${buttonStyles[style]}`}
    >
      {buttonText}
    </a>
  </div>
</section>

---
import BaseLayout from '../layouts/BaseLayout.astro';
import Navigation from '../components/astro/Navigation.astro';
import Footer from '../components/astro/Footer.astro';
import Hero from '../components/astro/Hero.astro';
import { getCollection } from 'astro:content';

export async function getStaticPaths() {
  const pages = await getCollection('pages');
  return pages
    .filter(page => page.id !== 'home')
    .map(page => ({
      params: { slug: page.data.slug },
      props: { page },
    }));
}

const { page } = Astro.props;
const { title, description, hero, sections } = page.data;

// Get related data based on page type
let centers;
let news;
let tournaments;
let honors;
let committees;

if (page.data.slug === 'centers') {
  centers = await getCollection('centers');
}

if (page.data.slug === 'news') {
  news = await getCollection('news');
}

if (page.data.slug === 'tournaments') {
  tournaments = await getCollection('tournaments');
}

if (page.data.slug === 'honors') {
  honors = await getCollection('honors');
}

if (page.data.slug === 'committees') {
  committees = await getCollection('committees');
}
---

<BaseLayout title={title} description={description}>
  <Navigation />
  
  {hero && (
    <Hero
      heading={hero.heading}
      subheading={hero.subheading}
      image={hero.image}
      ctaText={hero.ctaText}
      ctaLink={hero.ctaLink}
    />
  )}

  <main class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
    {sections?.map((section) => (
      <section class="mb-12">
        {section.heading && (
          <h2 class="font-display font-bold text-3xl mb-6 text-gray-900">
            {section.heading}
          </h2>
        )}
        
        {/* Text Section */}
        {section.type === 'text' && section.content && (
          <div class="prose prose-lg max-w-none">
            <p class="text-gray-700 leading-relaxed whitespace-pre-line">{section.content}</p>
            {section.link && (
              <a href={section.link.url} class="inline-block mt-4 text-primary-600 hover:text-primary-700 font-semibold">
                {section.link.text} →
              </a>
            )}
            {section.links && section.links.length > 0 && (
              <div class="mt-4 space-y-2">
                {section.links.map((link) => (
                  <div>
                    <a href={link.url} class="text-primary-600 hover:text-primary-700 font-semibold">
                      {link.text} →
                    </a>
                  </div>
                ))}
              </div>
            )}
          </div>
        )}

        {/* List Section */}
        {section.type === 'list' && section.items && (
          <div class="space-y-4">
            {section.items.map((item) => (
              <div class="bg-white rounded-lg shadow-sm p-6 border border-gray-200 hover:shadow-md transition-shadow">
                <h3 class="font-display font-bold text-xl mb-2 text-gray-900">
                  {item.title}
                </h3>
                {item.description && (
                  <p class="text-gray-700 mb-2">{item.description}</p>
                )}
                {item.link && (
                  <a href={item.link} class="text-primary-600 hover:text-primary-700 font-semibold text-sm">
                    Learn More →
                  </a>
                )}
              </div>
            ))}
          </div>
        )}

        {/* Cards Section */}
        {section.type === 'cards' && section.items && (
          <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
            {section.items.map((item) => (
              <div class="bg-white rounded-lg shadow-md p-6 border border-gray-200 hover:shadow-lg transition-shadow">
                <h3 class="font-display font-bold text-xl mb-3 text-gray-900">
                  {item.title}
                </h3>
                {item.description && (
                  <p class="text-gray-700 mb-3">{item.description}</p>
                )}
                {item.link && (
                  <a href={item.link} class="text-primary-600 hover:text-primary-700 font-semibold">
                    {item.linkText || 'Learn More'} →
                  </a>
                )}
              </div>
            ))}
          </div>
        )}

        {/* Table Section */}
        {section.type === 'table' && section.items && (
          <div class="overflow-x-auto">
            <table class="min-w-full divide-y divide-gray-200 border border-gray-200">
              <tbody class="bg-white divide-y divide-gray-200">
                {section.items.map((item, index) => (
                  <tr class={index % 2 === 0 ? 'bg-white' : 'bg-gray-50'}>
                    {Object.entries(item).map(([_key, value]) => (
                      <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-700">
                        {value}
                      </td>
                    ))}
                  </tr>
                ))}
              </tbody>
            </table>
          </div>
        )}
      </section>
    ))}

    {/* Centers Page */}
    {centers && (
      <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mt-8">
        {centers.map((center) => (
          <div class="bg-white rounded-lg shadow-md p-6 border border-gray-200">
            <h3 class="font-display font-bold text-xl mb-3 text-gray-900">
              {center.data.name}
            </h3>
            <div class="space-y-2 text-gray-700">
              <p>{center.data.address}</p>
              <p>{center.data.city}, {center.data.state} {center.data.zip}</p>
              <p class="font-semibold">{center.data.phone}</p>
              {center.data.website && (
                <a href={center.data.website} target="_blank" rel="noopener noreferrer" class="text-primary-600 hover:text-primary-700">
                  Visit Website →
                </a>
              )}
              {center.data.lanes && (
                <p class="text-sm text-gray-600 mt-3">
                  <strong>Lanes:</strong> {center.data.lanes}
                </p>
              )}
              {center.data.features && center.data.features.length > 0 && (
                <div class="mt-3">
                  <p class="text-sm font-semibold text-gray-700 mb-1">Features:</p>
                  <ul class="text-sm text-gray-600 space-y-1">
                    {center.data.features.map((feature) => (
                      <li>• {feature}</li>
                    ))}
                  </ul>
                </div>
              )}
            </div>
          </div>
        ))}
      </div>
    )}

    {/* News Page */}
    {news && (
      <div class="space-y-6 mt-8">
        {news.map((article) => (
          <article class="bg-white rounded-lg shadow-md p-6 border border-gray-200">
            <h3 class="font-display font-bold text-2xl mb-2 text-gray-900">
              {article.data.title}
            </h3>
            <p class="text-sm text-gray-500 mb-3">
              {article.data.date} {article.data.author && `• by ${article.data.author}`}
            </p>
            <p class="text-gray-700 mb-4">{article.data.excerpt}</p>
            <p class="text-gray-700">{article.data.content}</p>
            {article.data.tags && (
              <div class="flex flex-wrap gap-2 mt-4">
                {article.data.tags.map((tag) => (
                  <span class="px-3 py-1 bg-primary-100 text-primary-700 text-xs font-semibold rounded-full">
                    {tag}
                  </span>
                ))}
              </div>
            )}
          </article>
        ))}
      </div>
    )}

    {/* Tournaments Page */}
    {tournaments && (
      <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mt-8">
        {tournaments.map((tournament) => (
          <div class="bg-white rounded-lg shadow-md p-6 border border-gray-200">
            <div class="flex items-start justify-between mb-3">
              <h3 class="font-display font-bold text-xl text-gray-900">
                {tournament.data.name}
              </h3>
              {tournament.data.status && (
                <span class={`px-3 py-1 text-xs font-semibold rounded-full ${
                  tournament.data.status === 'registration-open' ? 'bg-green-100 text-green-700' :
                  tournament.data.status === 'upcoming' ? 'bg-blue-100 text-blue-700' :
                  'bg-gray-100 text-gray-700'
                }`}>
                  {tournament.data.status === 'registration-open' ? 'Registration Open' :
                   tournament.data.status === 'upcoming' ? 'Upcoming' : 'Completed'}
                </span>
              )}
            </div>
            <div class="space-y-2 text-gray-700">
              <p class="font-semibold text-primary-600">{tournament.data.date}</p>
              <p>{tournament.data.location}</p>
              {tournament.data.description && (
                <p class="mt-3">{tournament.data.description}</p>
              )}
              {tournament.data.entryFee && (
                <p class="text-sm"><strong>Entry Fee:</strong> {tournament.data.entryFee}</p>
              )}
              {tournament.data.prizeFund && (
                <p class="text-sm"><strong>Prize Fund:</strong> {tournament.data.prizeFund}</p>
              )}
              {tournament.data.contact && (
                <div class="mt-4 pt-4 border-t border-gray-200">
                  <p class="text-sm font-semibold">Contact:</p>
                  <p class="text-sm">{tournament.data.contact.name}</p>
                  {tournament.data.contact.phone && (
                    <p class="text-sm">{tournament.data.contact.phone}</p>
                  )}
                  {tournament.data.contact.email && (
                    <p class="text-sm">
                      <a href={`mailto:${tournament.data.contact.email}`} class="text-primary-600 hover:text-primary-700">
                        {tournament.data.contact.email}
                      </a>
                    </p>
                  )}
                </div>
              )}
            </div>
          </div>
        ))}
      </div>
    )}

    {/* Honors Page */}
    {honors && (
      <div class="space-y-8 mt-8">
        {honors.map((honor) => (
          <div class="bg-white rounded-lg shadow-md p-6 border border-gray-200">
            <h3 class="font-display font-bold text-2xl mb-4 text-gray-900">
              {honor.data.category} - {honor.data.year}
            </h3>
            <div class="overflow-x-auto">
              <table class="min-w-full divide-y divide-gray-200">
                <thead class="bg-gray-50">
                  <tr>
                    <th class="px-6 py-3 text-left text-xs font-semibold text-gray-700 uppercase tracking-wider">
                      Name
                    </th>
                    <th class="px-6 py-3 text-left text-xs font-semibold text-gray-700 uppercase tracking-wider">
                      Achievement
                    </th>
                    {honor.data.recipients?.some((r: any) => r.score) && (
                      <th class="px-6 py-3 text-left text-xs font-semibold text-gray-700 uppercase tracking-wider">
                        Score
                      </th>
                    )}
                    {honor.data.recipients?.some((r: any) => r.date) && (
                      <th class="px-6 py-3 text-left text-xs font-semibold text-gray-700 uppercase tracking-wider">
                        Date
                      </th>
                    )}
                  </tr>
                </thead>
                <tbody class="bg-white divide-y divide-gray-200">
                  {honor.data.recipients?.map((recipient: any) => (
                    <tr>
                      <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900">
                        {recipient.name}
                      </td>
                      <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-700">
                        {recipient.achievement}
                      </td>
                      {recipient.score && (
                        <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-700">
                          {recipient.score}
                        </td>
                      )}
                      {recipient.date && (
                        <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-700">
                          {recipient.date}
                        </td>
                      )}
                    </tr>
                  ))}
                </tbody>
              </table>
            </div>
          </div>
        ))}
      </div>
    )}

    {/* Committees Page */}
    {committees && (
      <div class="space-y-8 mt-8">
        {committees.map((committee) => (
          <div class="bg-white rounded-lg shadow-md p-6 border border-gray-200">
            <h3 class="font-display font-bold text-2xl mb-2 text-gray-900">
              {committee.data.name}
            </h3>
            {committee.data.description && (
              <p class="text-gray-700 mb-4">{committee.data.description}</p>
            )}
            <div class="grid grid-cols-1 md:grid-cols-2 gap-4 mt-4">
              {committee.data.members.map((member) => (
                <div class="border border-gray-200 rounded-lg p-4">
                  <p class="font-semibold text-gray-900">{member.name}</p>
                  <p class="text-sm text-primary-600">{member.position}</p>
                  {member.email && (
                    <p class="text-sm text-gray-700 mt-1">
                      <a href={`mailto:${member.email}`} class="hover:text-primary-600">
                        {member.email}
                      </a>
                    </p>
                  )}
                  {member.phone && (
                    <p class="text-sm text-gray-700">{member.phone}</p>
                  )}
                </div>
              ))}
            </div>
          </div>
        ))}
      </div>
    )}
  </main>

  <Footer />
</BaseLayout>

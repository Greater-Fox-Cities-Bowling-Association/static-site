---
import ImportAdmin from '../../components/react/ImportAdmin';

// Check if we're in development mode and get the token
const isDev = import.meta.env.DEV;
const devToken = isDev ? import.meta.env.GITHUB_TOKEN : undefined;
---

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>GFCBA Admin - Import Data</title>
  <style is:global>
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }
    body {
      font-family: system-ui, -apple-system, sans-serif;
    }
  </style>
</head>
<body>
  <ImportAdmin client:load devToken={devToken} isDev={isDev} />
</body>
</html>

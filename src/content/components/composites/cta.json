{
  "id": "cta",
  "name": "Call to Action",
  "description": "Prominent call-to-action section with heading and button",
  "type": "composite",
  "icon": "ðŸ“£",
  "minColumns": 6,
  "defaultColumns": 12,
  "components": [
    {
      "id": "cta-section",
      "primitive": "section",
      "props": { "padding": "large" }
    },
    {
      "id": "cta-heading",
      "primitive": "text",
      "props": { "heading": "{{heading}}", "alignment": "center" }
    },
    {
      "id": "cta-spacer",
      "primitive": "spacer",
      "props": { "size": "small" }
    },
    {
      "id": "cta-button",
      "primitive": "button",
      "props": { "text": "{{buttonText}}", "link": "{{buttonLink}}", "style": "{{style}}", "size": "large" }
    }
  ],
  "dataSchema": [
    { "name": "heading", "label": "Heading", "type": "string", "required": true },
    { "name": "buttonText", "label": "Button Text", "type": "string", "required": true },
    { "name": "buttonLink", "label": "Button Link URL", "type": "string", "required": true },
    {
      "name": "style",
      "label": "Style",
      "type": "enum",
      "required": false,
      "defaultValue": "primary",
      "values": ["primary", "secondary"]
    }
  ]
}

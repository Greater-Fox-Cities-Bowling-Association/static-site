{
  "id": "card-grid",
  "name": "Card Grid",
  "description": "Multiple cards in a responsive grid layout",
  "type": "composite",
  "icon": "üóÉÔ∏è",
  "minColumns": 4,
  "defaultColumns": 12,
  "components": [
    {
      "id": "card-grid-section",
      "primitive": "section",
      "props": { "padding": "large" }
    },
    {
      "id": "card-grid-heading",
      "primitive": "text",
      "props": { "heading": "{{heading}}", "alignment": "center" }
    },
    {
      "id": "card-grid-cards",
      "primitive": "cards",
      "props": { "items": "{{cards}}", "columns": "{{columns}}" }
    }
  ],
  "dataSchema": [
    { "name": "heading", "label": "Heading", "type": "string", "required": false },
    {
      "name": "columns",
      "label": "Columns",
      "type": "enum",
      "required": false,
      "defaultValue": "3",
      "values": ["2", "3", "4"]
    },
    {
      "name": "cards",
      "label": "Cards",
      "type": "array",
      "required": true,
      "itemType": "string",
      "description": "One card per line: Title | Description | ImageURL | Link"
    }
  ]
}

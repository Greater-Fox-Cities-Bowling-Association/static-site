{
  "id": "hero",
  "name": "Hero Banner",
  "description": "Large banner with title, subtitle, and call-to-action button",
  "type": "composite",
  "icon": "ðŸ¦¸",
  "minColumns": 12,
  "defaultColumns": 12,
  "components": [
    {
      "id": "hero-section",
      "primitive": "section",
      "props": { "padding": "large" }
    },
    {
      "id": "hero-bg-image",
      "primitive": "image",
      "props": { "src": "{{backgroundImage}}", "alt": "", "width": "100%" }
    },
    {
      "id": "hero-title",
      "primitive": "text",
      "props": { "heading": "{{title}}", "alignment": "center" }
    },
    {
      "id": "hero-subtitle",
      "primitive": "text",
      "props": { "content": "{{subtitle}}", "alignment": "center" }
    },
    {
      "id": "hero-spacer",
      "primitive": "spacer",
      "props": { "size": "small" }
    },
    {
      "id": "hero-cta",
      "primitive": "button",
      "props": { "text": "{{ctaText}}", "link": "{{ctaLink}}", "style": "secondary", "size": "large" }
    }
  ],
  "dataSchema": [
    { "name": "title", "label": "Title", "type": "string", "required": true },
    { "name": "subtitle", "label": "Subtitle", "type": "string", "required": false },
    { "name": "backgroundImage", "label": "Background Image URL", "type": "string", "required": false },
    { "name": "ctaText", "label": "Button Text", "type": "string", "required": false },
    { "name": "ctaLink", "label": "Button Link URL", "type": "string", "required": false }
  ]
}
